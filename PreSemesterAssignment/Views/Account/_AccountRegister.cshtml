@model PreSemesterAssignment.Models.RegisterViewModel

<h2>Register</h2>
<form asp-action="Register" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" autocomplete="given-name"/>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" autocomplete="family-name"/>
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" autocomplete="email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" autocomplete="new-password" />
        <span asp-validation-for="Password"></span>
        <small class="text-muted">
            Password must be at least 6 characters and include an uppercase letter, a lowercase letter, a digit, and a special character.
        </small>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" autocomplete="new-password />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit">Register</button>

    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            var password = document.querySelector('input[name="Password"]').value;
            var requirements = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z\d]).{6,}$/;
            if (!requirements.test(password)) {
                alert("Password must be at least 6 characters and include an uppercase letter, a lowercase letter, a digit, and a special character.");
                e.preventDefault();
            }
        });
    </script>
</form>
<p>
    Already have an account?
    <a asp-action="Login">Login Here</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
