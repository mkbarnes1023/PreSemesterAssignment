@model IEnumerable<PreSemesterAssignment.Models.VolunteerMatchesModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Volunteer Matches List</h1>

<p>
    <a asp-controller="Home" asp-action="Admin" class="btn btn-secondary mb-4">Back to Admin Home</a>
    
</p>
<p>
    
</p>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opportunity)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Volunteer.VolunteerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opportunity.OppurtunityID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                </td>
                <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success mt-3">Create New</a>
</div>
