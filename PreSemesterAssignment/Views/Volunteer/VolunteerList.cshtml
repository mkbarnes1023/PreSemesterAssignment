@model IEnumerable<PreSemesterAssignment.Models.Volunteer>
@{
}
<!--
    This page provides a list of all the Volunteers registered to the system. The list should support the filtering
    functions, entry deletion, and a link to the form to add a new Volunteer (VolunteerAdd.cshtml)
-->
<div class="container py-5">
    <h1 class="mb-4">Volunteer List</h1>
    <a asp-controller="Home" asp-action="Admin" class="btn btn-secondary mb-3">Back to Admin Home</a>
    <form asp-controller="Volunteer" asp-action="VolunteerList" method="get">
        <div class="input-group">
            <input type="text" name="search" id="search" aria-label="search" class="form-control" placeholder="Search Query">
            <button type="submit" class="btn btn-outline-secondary" id="search">Search</button>

            @* <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Filters
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div> *@
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Contact Numbers</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.VolunteerID</td>
                        <td>@v.FirstName</td>
                        <td>@v.LastName</td>
                        <td>@v.EmailAddress</td>
                        <td>@v.ContactNumbers</td>
                        <td>@v.ApprovalStatus</td>
                        <td>
                            <a asp-controller="Volunteer" asp-action="VolunteerEdit" asp-route-VolunteerID="@v.VolunteerID" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-controller="Volunteer" asp-action="VolunteerAdd" class="btn btn-success mt-3">Add New Volunteer</a>
</div>